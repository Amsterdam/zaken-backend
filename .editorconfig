root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4

[Dockerfile, *.{json,yml,yaml,sh,bash,ini,conf,md}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
